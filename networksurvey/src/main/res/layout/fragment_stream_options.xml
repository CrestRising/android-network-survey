<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/streamCellularRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/streamCellularTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:text="@string/stream_cellular_title"
                android:textSize="@dimen/medium_text_size"
                app:layout_constraintRight_toLeftOf="@id/streamCellularStatusTextView"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/streamCellularStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:text="ON"
                android:textColor="@color/gray"
                android:textSize="@dimen/medium_text_size"
                app:layout_constraintLeft_toRightOf="@id/streamCellularTextView"
                app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/streamCellularToggleSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/x_small_margin"
                android:checked="true"
                android:paddingTop="@dimen/medium_margin"
                android:paddingBottom="@dimen/x_small_margin"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/streamWifiRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/streamWifiTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:text="@string/stream_wifi_title"
                android:textSize="@dimen/medium_text_size"
                app:layout_constraintRight_toLeftOf="@id/streamWifiStatusTextView"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/streamWifiStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:text="ON"
                android:textColor="@color/gray"
                android:textSize="@dimen/medium_text_size"
                app:layout_constraintLeft_toRightOf="@id/streamWifiTextView"
                app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/streamWifiToggleSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/x_small_margin"
                android:checked="true"
                android:paddingTop="@dimen/medium_margin"
                android:paddingBottom="@dimen/x_small_margin"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/streamGnssRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/streamGnssTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:text="@string/stream_gnss_title"
                android:textSize="@dimen/medium_text_size"
                app:layout_constraintRight_toLeftOf="@id/streamGnssStatusTextView"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/streamGnssStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:text="ON"
                android:textColor="@color/gray"
                android:textSize="@dimen/medium_text_size"
                app:layout_constraintLeft_toRightOf="@id/streamGnssTextView"
                app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/streamGnssToggleSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/x_small_margin"
                android:checked="true"
                android:paddingTop="@dimen/medium_margin"
                android:paddingBottom="@dimen/x_small_margin"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>